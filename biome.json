{
  "$schema": "https://biomejs.dev/schemas/1.5.1/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  },
  "javascript": {
    "formatter": {
      "indentStyle": "tab",
      "indentWidth": 2,
      "lineWidth": 80,
      "quoteStyle": "single",
      "semicolons": "asNeeded"
    }
  }
}
